// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Shop {
  id                 String    @id @default(uuid())
  shopDomain         String    @unique
  credits            Int       @default(10)
  monthlyCredits     Int       @default(10)
  subscriptionPlan   String    @default("FREE")
  // Новые поля для подписок:
  subscriptionId     String?
  subscriptionStatus String?   @default("ACTIVE")
  creditsResetDate   DateTime?

  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  usageLogs          UsageLog[]
  generatedImages    GeneratedImage[]
  generatedVideos    GeneratedVideo[]
  customAssets       CustomAsset[]
}

model GeneratedVideo {
  id           String   @id @default(uuid())
  shopId       String
  shop         Shop     @relation(fields: [shopId], references: [id])
  imageId      String?  
  productId    String?
  productTitle String?
  videoUrl     String
  klingTaskId  String
  status       String   @default("PENDING") // PENDING, COMPLETED, FAILED
  productType  String?
  height       Int?     @default(1920)
  width        Int?     @default(1080)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model CustomAsset {
  id        String   @id @default(uuid())
  shopId    String
  shop      Shop     @relation(fields: [shopId], references: [id])
  type      String   // "model" or "location"
  name      String
  imageUrl  String
  createdAt DateTime @default(now())
}

model GeneratedImage {
  id              String   @id @default(uuid())
  shopId          String
  shop            Shop     @relation(fields: [shopId], references: [id])
  productId       String
  productTitle    String
  imageUrl        String
  angleIndex      Int      @default(1)
  productCategory String?
  productType     String?
  createdAt       DateTime @default(now())
}

// Модель UsageLog остается без изменений, если она уже есть:
// Модель для логов использования
model UsageLog {
  id        String   @id @default(uuid())
  shopId    String
  shop      Shop     @relation(fields: [shopId], references: [id])
  action    String
  cost      Int
  details   String?
  createdAt DateTime @default(now())
}

// Новое: База знаний AI
model KnowledgeItem {
  id         String   @id @default(uuid())
  shopDomain String
  type       String   // product, collection, discount, article, page, policy, theme_section
  externalId String?  // Shopify ID
  title      String?
  content    String   // Текст для обучения AI
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())

  @@index([shopDomain])
}

// Новое: Статистика индексации
model StoreStats {
  id           String   @id @default(uuid())
  shopDomain   String   @unique
  products     Int      @default(0)
  collections  Int      @default(0)
  discounts    Int      @default(0)
  articles     Int      @default(0)
  pages        Int      @default(0)
  policies     Int      @default(0)
  autoSync     Boolean  @default(true)
  lastIndexed  DateTime @default(now())
}

model WidgetConfig {
  id              String   @id @default(uuid())
  shopDomain      String   @unique
  enabled         Boolean  @default(true)
  primaryColor    String   @default("#4F46E5")
  backgroundColor String   @default("#FFFFFF")
  textColor       String   @default("#1F2937")
  borderRadius    Int      @default(12)
  shadow          Boolean  @default(true)
  opacity         Int      @default(100)
  position        String   @default("bottom-right") // bottom-right, bottom-left
  minimizedStyle  String   @default("icon") // icon, bubble, text
  updatedAt       DateTime @updatedAt
}

model CharacterProfile {
  id              String   @id @default(uuid())
  shopDomain      String
  isActive        Boolean  @default(false)
  isPreset        Boolean  @default(false)
  name            String   @default("Anna")
  avatarType      String   @default("preset") // preset, image
  avatarId        String   @default("anna") // for presets
  
  // JSON to store animation states: { idle: { frames: [assetId1, assetId2], speed: 500 }, greeting: { ... } }
  animationConfig String   @default("{}") 
  tone            String   @default("friendly")
  initiative      String   @default("high")     // low (Librarian), high (Active)
  verbosity       String   @default("short")    // short, balanced
  style           String   @default("benefit")  // tech (Specs), benefit (Empathy)
  ethics          String   @default("advisor")  // sales (Pushy), advisor (Honest)
  
  role            String   @default("Shopping Assistant")
  welcomeMessage  String   @default("Hi! I'm {name}, your local AI shopping assistant. How can I help you?")
  instructions    String   @default("You are a helpful and friendly shopping assistant for our Shopify store.")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  assets          CharacterAsset[]

  @@index([shopDomain])
}

model CharacterAsset {
  id        String   @id @default(uuid())
  profileId String
  profile   CharacterProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)
  url       String
  type      String   @default("image") // image, svg
  createdAt DateTime @default(now())
}

model ChatSession {
  id           String   @id @default(uuid())
  shopDomain   String
  customerName String   @default("Guest")
  status       String   @default("ACTIVE") // ACTIVE, RESOLVED
  aiStatus     String   @default("AI_ON")  // AI_ON, AI_OFF
  lastMessage  String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  messages     ChatMessage[]

  @@index([shopDomain])
}

model ChatMessage {
  id        String   @id @default(uuid())
  sessionId String
  session   ChatSession @relation(fields: [sessionId], references: [id])
  sender    String   // customer, ai, human
  text      String
  createdAt DateTime @default(now())
}