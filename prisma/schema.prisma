// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Shop {
  id                 String    @id @default(uuid())
  shopDomain         String    @unique
  credits            Int       @default(10)
  monthlyCredits     Int       @default(10)
  subscriptionPlan   String    @default("FREE")
  // Новые поля для подписок:
  subscriptionId     String?
  subscriptionStatus String?   @default("ACTIVE")
  creditsResetDate   DateTime?

  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  usageLogs          UsageLog[]
  generatedImages    GeneratedImage[]
  generatedVideos    GeneratedVideo[]
  customAssets       CustomAsset[]
}

model GeneratedVideo {
  id           String   @id @default(uuid())
  shopId       String
  shop         Shop     @relation(fields: [shopId], references: [id])
  imageId      String?  
  productId    String?
  productTitle String?
  videoUrl     String
  klingTaskId  String
  status       String   @default("PENDING") // PENDING, COMPLETED, FAILED
  productType  String?
  height       Int?     @default(1920)
  width        Int?     @default(1080)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model CustomAsset {
  id        String   @id @default(uuid())
  shopId    String
  shop      Shop     @relation(fields: [shopId], references: [id])
  type      String   // "model" or "location"
  name      String
  imageUrl  String
  createdAt DateTime @default(now())
}

model GeneratedImage {
  id              String   @id @default(uuid())
  shopId          String
  shop            Shop     @relation(fields: [shopId], references: [id])
  productId       String
  productTitle    String
  imageUrl        String
  angleIndex      Int      @default(1)
  productCategory String?
  productType     String?
  createdAt       DateTime @default(now())
}

// Модель UsageLog остается без изменений, если она уже есть:
// Модель для логов использования
model UsageLog {
  id        String   @id @default(uuid())
  shopId    String
  shop      Shop     @relation(fields: [shopId], references: [id])
  action    String
  cost      Int
  details   String?
  createdAt DateTime @default(now())
}

// Новое: База знаний AI
model KnowledgeItem {
  id         String   @id @default(uuid())
  shopDomain String
  type       String   // product, collection, discount, article, page, policy, theme_section
  externalId String?  // Shopify ID
  title      String?
  content    String   // Текст для обучения AI
  updatedAt  DateTime @updatedAt
  createdAt  DateTime @default(now())

  @@index([shopDomain])
}

// Новое: Статистика индексации
model StoreStats {
  id           String   @id @default(uuid())
  shopDomain   String   @unique
  products     Int      @default(0)
  collections  Int      @default(0)
  discounts    Int      @default(0)
  articles     Int      @default(0)
  pages        Int      @default(0)
  policies     Int      @default(0)
  lastIndexed  DateTime @default(now())
}